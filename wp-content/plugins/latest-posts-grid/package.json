{
  "name": "latest-posts-grid",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "build": "wp-scripts build ./src/index.ts ./src/view.tsx && tailwindcss -i ./src/style.css -o ./build/style-index.css --minify && tailwindcss -i ./src/style.css -o ./build/editor.css --minify",
    "start": "concurrently \"wp-scripts start ./src/index.ts ./src/view.tsx\" \"tailwindcss -i ./src/style.css -o ./build/style-index.css --watch\" \"tailwindcss -i ./src/style.css -o ./build/editor.css --watch\"",
    "dev": "npm run start",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@wordpress/scripts": "^27.4.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0"
  },
  "dependencies": {
    "graphql": "^16.9.0",
    "graphql-request": "^7.1.1"
  }
}
